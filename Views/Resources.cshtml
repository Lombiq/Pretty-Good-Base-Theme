@{
    /// <summary>
    /// Specify resource inclusions here
    /// 
    /// Override in child theme if you want to include different resources.
    /// To just add to this set, override AdditionalResources.cshtml
    /// </summary>
}

@using Orchard.Mvc.Html;
@using Orchard.UI.Resources;

@{
    var theme = WorkContext.CurrentTheme;
    /* Links
    ***************************************************************/
    RegisterLink(new LinkEntry { Type = "image/x-icon", Rel = "shortcut icon", Href = Url.Content(theme.Location + "/" + theme.Path + "/Images/" + "favicon.ico") });
    
    /* Styles
    ***************************************************************/
    Style.Include("Reset.css");
    Style.Include("General.css");
    Style.Include("Forms.css");
    Style.Include("Structure.css");
    Style.Include("Main.css");
    Style.Include("Secondary.css");
    Style.Include("Widgets.css");
    Style.Include("Pager.css");
    Style.Include("Misc.css");
    Style.Include("CSS3.css");
    Style.Include("Site.css");
    
    /* Scripts
    ***************************************************************/
    Script.Include("~/Core/Shapes/Scripts/html5.js").AtHead();

    Display.AdditionalResources();
}